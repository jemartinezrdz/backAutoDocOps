{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "AutoDocOps": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=${DB_HOST:-localhost};Database=${DB_NAME:-autodocops};Username=${DB_USERNAME:-postgres};Password=${DB_PASSWORD:-postgres}",
    "Redis": "${REDIS_URL:-localhost:6379}"
  },
  "JwtSettings": {
    "SecretKey": "${JWT_SECRET_KEY}",
    "Issuer": "AutoDocOps",
    "Audience": "AutoDocOps.API",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "OpenAI": {
    "ApiKey": "${OPENAI_API_KEY}",
    "Endpoint": "${OPENAI_API_BASE}",
    "Model": "gpt-3.5-turbo"
  },
  "Stripe": {
    "SecretKey": "${STRIPE_API_KEY}",
    "WebhookSecret": "${STRIPE_WEBHOOK_SECRET}",
    "Plans": {
      "Starter": {
        "PriceId": "price_starter_default"
      },
      "Growth": {
        "PriceId": "price_growth_default"
      }
    }
  }
}
